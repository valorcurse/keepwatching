{

  "description": "",
  "manifest_version": 2,
  "name": "Keep Watching",
  "version": "1.0",
  "homepage_url": "https://github.com/valorcurse/keepwatching",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@keeptwatching.dev",
      "strict_min_version": "42.0"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["keepwatching.js"]
    }
  ]

}
